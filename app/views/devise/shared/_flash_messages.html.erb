<%# Shared flash messages for authentication pages %>
<% if flash[:notice] %>
  <div class="p-4 mb-4 text-sm rounded-md bg-blue-50 text-blue-700 border border-blue-200">
    <div class="flex items-center">
      <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zm-1 9a1 1 0 102 0v-5a1 1 0 10-2 0v5z" clip-rule="evenodd"/>
      </svg>
      <%= flash[:notice] %>
    </div>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="p-4 mb-4 text-sm rounded-md bg-red-50 text-red-700 border border-red-200">
    <div class="flex items-center">
      <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
      </svg>
      <%= flash[:alert] %>
    </div>
  </div>
<% end %>

<% if flash[:success] %>
  <div class="p-4 mb-4 text-sm rounded-md bg-green-50 text-green-700 border border-green-200">
    <div class="flex items-center">
      <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      <%= flash[:success] %>
    </div>
  </div>
<% end %>
