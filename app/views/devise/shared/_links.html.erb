<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Already have an account? Sign in", new_session_path(resource_name), class: "text-indigo-600 hover:text-indigo-500 text-sm font-medium" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Don't have an account? Sign up", new_registration_path(resource_name), class: "text-indigo-600 hover:text-indigo-500 text-sm font-medium" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <br />
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-gray-600 hover:text-gray-500 text-sm" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <br />
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-gray-600 hover:text-gray-500 text-sm" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <br />
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-gray-600 hover:text-gray-500 text-sm" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <br />
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    <% end %>
  <% end %>
</div>
