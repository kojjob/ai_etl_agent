<%= form_with(model: dashboard, class: "contents") do |form| %>
  <% if dashboard.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(dashboard.errors.count, "error") %> prohibited this dashboard from being saved:</h2>

      <ul class="list-disc ml-6">
        <% dashboard.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dashboard.errors[:user_id].none?, "border-red-400 focus:outline-red-600": dashboard.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dashboard.errors[:name].none?, "border-red-400 focus:outline-red-600": dashboard.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dashboard.errors[:description].none?, "border-red-400 focus:outline-red-600": dashboard.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :layout_config %>
    <%= form.text_field :layout_config, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dashboard.errors[:layout_config].none?, "border-red-400 focus:outline-red-600": dashboard.errors[:layout_config].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :is_default %>
    <%= form.checkbox :is_default, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": dashboard.errors[:is_default].none?, "border-red-400 focus:outline-red-600": dashboard.errors[:is_default].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :is_shared %>
    <%= form.checkbox :is_shared, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": dashboard.errors[:is_shared].none?, "border-red-400 focus:outline-red-600": dashboard.errors[:is_shared].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :shared_with_roles %>
    <%= form.text_field :shared_with_roles, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dashboard.errors[:shared_with_roles].none?, "border-red-400 focus:outline-red-600": dashboard.errors[:shared_with_roles].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
