<%= form_with(model: notification, class: "contents") do |form| %>
  <% if notification.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(notification.errors.count, "error") %> prohibited this notification from being saved:</h2>

      <ul class="list-disc ml-6">
        <% notification.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notification.errors[:user_id].none?, "border-red-400 focus:outline-red-600": notification.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :alert_id %>
    <%= form.text_field :alert_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notification.errors[:alert_id].none?, "border-red-400 focus:outline-red-600": notification.errors[:alert_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :channel %>
    <%= form.text_field :channel, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notification.errors[:channel].none?, "border-red-400 focus:outline-red-600": notification.errors[:channel].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :content %>
    <%= form.textarea :content, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notification.errors[:content].none?, "border-red-400 focus:outline-red-600": notification.errors[:content].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notification.errors[:status].none?, "border-red-400 focus:outline-red-600": notification.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :read_at %>
    <%= form.datetime_field :read_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": notification.errors[:read_at].none?, "border-red-400 focus:outline-red-600": notification.errors[:read_at].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
