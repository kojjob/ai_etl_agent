<%= form_with(model: pipeline, class: "contents") do |form| %>
  <% if pipeline.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(pipeline.errors.count, "error") %> prohibited this pipeline from being saved:</h2>

      <ul class="list-disc ml-6">
        <% pipeline.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pipeline.errors[:name].none?, "border-red-400 focus:outline-red-600": pipeline.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pipeline.errors[:description].none?, "border-red-400 focus:outline-red-600": pipeline.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :created_by_user_id %>
    <%= form.text_field :created_by_user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pipeline.errors[:created_by_user_id].none?, "border-red-400 focus:outline-red-600": pipeline.errors[:created_by_user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :project_id %>
    <%= form.text_field :project_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pipeline.errors[:project_id].none?, "border-red-400 focus:outline-red-600": pipeline.errors[:project_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :version %>
    <%= form.number_field :version, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pipeline.errors[:version].none?, "border-red-400 focus:outline-red-600": pipeline.errors[:version].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pipeline.errors[:status].none?, "border-red-400 focus:outline-red-600": pipeline.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :tags %>
    <%= form.text_field :tags, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pipeline.errors[:tags].none?, "border-red-400 focus:outline-red-600": pipeline.errors[:tags].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :ai_assisted_design_details %>
    <%= form.text_field :ai_assisted_design_details, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pipeline.errors[:ai_assisted_design_details].none?, "border-red-400 focus:outline-red-600": pipeline.errors[:ai_assisted_design_details].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
