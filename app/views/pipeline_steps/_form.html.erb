<%= form_with(model: pipeline_step, class: "contents") do |form| %>
  <% if pipeline_step.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(pipeline_step.errors.count, "error") %> prohibited this pipeline_step from being saved:</h2>

      <ul class="list-disc ml-6">
        <% pipeline_step.errors.each do |error| %>
          <li><%= error.full_message %></li>
