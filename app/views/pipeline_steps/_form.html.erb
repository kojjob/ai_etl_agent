    <%= form.text_field :pipeline_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": pipeline_step.errors[:pipeline_id].none?, "border-red-400 focus:outline-red-600": pipeline_step.errors[:pipeline_id].any?}] %>
  </div>

