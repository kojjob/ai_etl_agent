<%= form_with(model: alert, class: "contents") do |form| %>
  <% if alert.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(alert.errors.count, "error") %> prohibited this alert from being saved:</h2>

      <ul class="list-disc ml-6">
        <% alert.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :pipeline_id %>
    <%= form.text_field :pipeline_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert.errors[:pipeline_id].none?, "border-red-400 focus:outline-red-600": alert.errors[:pipeline_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :pipeline_run_id %>
    <%= form.text_field :pipeline_run_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert.errors[:pipeline_run_id].none?, "border-red-400 focus:outline-red-600": alert.errors[:pipeline_run_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :pipeline_step_run_id %>
    <%= form.text_field :pipeline_step_run_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert.errors[:pipeline_step_run_id].none?, "border-red-400 focus:outline-red-600": alert.errors[:pipeline_step_run_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :rule_id %>
    <%= form.text_field :rule_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert.errors[:rule_id].none?, "border-red-400 focus:outline-red-600": alert.errors[:rule_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :severity %>
    <%= form.text_field :severity, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert.errors[:severity].none?, "border-red-400 focus:outline-red-600": alert.errors[:severity].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :message %>
    <%= form.textarea :message, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert.errors[:message].none?, "border-red-400 focus:outline-red-600": alert.errors[:message].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert.errors[:status].none?, "border-red-400 focus:outline-red-600": alert.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :acknowledged_by_user_id %>
    <%= form.text_field :acknowledged_by_user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert.errors[:acknowledged_by_user_id].none?, "border-red-400 focus:outline-red-600": alert.errors[:acknowledged_by_user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :acknowledged_at %>
    <%= form.datetime_field :acknowledged_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert.errors[:acknowledged_at].none?, "border-red-400 focus:outline-red-600": alert.errors[:acknowledged_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :resolved_at %>
    <%= form.datetime_field :resolved_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert.errors[:resolved_at].none?, "border-red-400 focus:outline-red-600": alert.errors[:resolved_at].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
