<%= form_with(model: system_setting, class: "contents") do |form| %>
  <% if system_setting.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(system_setting.errors.count, "error") %> prohibited this system_setting from being saved:</h2>

      <ul class="list-disc ml-6">
        <% system_setting.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :setting_key %>
    <%= form.text_field :setting_key, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": system_setting.errors[:setting_key].none?, "border-red-400 focus:outline-red-600": system_setting.errors[:setting_key].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :setting_value %>
    <%= form.text_field :setting_value, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": system_setting.errors[:setting_value].none?, "border-red-400 focus:outline-red-600": system_setting.errors[:setting_value].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": system_setting.errors[:description].none?, "border-red-400 focus:outline-red-600": system_setting.errors[:description].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :is_sensitive %>
    <%= form.checkbox :is_sensitive, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": system_setting.errors[:is_sensitive].none?, "border-red-400 focus:outline-red-600": system_setting.errors[:is_sensitive].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
