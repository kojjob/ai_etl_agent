<div id="<%= dom_id system_setting %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Setting key:</strong>
    <%= system_setting.setting_key %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Setting value:</strong>
    <%= system_setting.setting_value %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= system_setting.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Is sensitive:</strong>
    <%= system_setting.is_sensitive? ? "Yes" : "No" %>
  </div>
</div>
