<%= form_with(model: alert_rule, class: "contents") do |form| %>
  <% if alert_rule.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(alert_rule.errors.count, "error") %> prohibited this alert_rule from being saved:</h2>

      <ul class="list-disc ml-6">
        <% alert_rule.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert_rule.errors[:name].none?, "border-red-400 focus:outline-red-600": alert_rule.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert_rule.errors[:description].none?, "border-red-400 focus:outline-red-600": alert_rule.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :target_entity_type %>
    <%= form.text_field :target_entity_type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert_rule.errors[:target_entity_type].none?, "border-red-400 focus:outline-red-600": alert_rule.errors[:target_entity_type].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :condition %>
    <%= form.text_field :condition, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert_rule.errors[:condition].none?, "border-red-400 focus:outline-red-600": alert_rule.errors[:condition].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :severity %>
    <%= form.text_field :severity, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert_rule.errors[:severity].none?, "border-red-400 focus:outline-red-600": alert_rule.errors[:severity].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :notification_channels %>
    <%= form.text_field :notification_channels, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": alert_rule.errors[:notification_channels].none?, "border-red-400 focus:outline-red-600": alert_rule.errors[:notification_channels].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :is_active %>
    <%= form.checkbox :is_active, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": alert_rule.errors[:is_active].none?, "border-red-400 focus:outline-red-600": alert_rule.errors[:is_active].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
