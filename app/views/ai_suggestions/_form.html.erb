<%= form_with(model: ai_suggestion, class: "contents") do |form| %>
  <% if ai_suggestion.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(ai_suggestion.errors.count, "error") %> prohibited this ai_suggestion from being saved:</h2>

      <ul class="list-disc ml-6">
        <% ai_suggestion.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ai_suggestion.errors[:user_id].none?, "border-red-400 focus:outline-red-600": ai_suggestion.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :session_id %>
    <%= form.text_field :session_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ai_suggestion.errors[:session_id].none?, "border-red-400 focus:outline-red-600": ai_suggestion.errors[:session_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :context_entity_id %>
    <%= form.text_field :context_entity_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ai_suggestion.errors[:context_entity_id].none?, "border-red-400 focus:outline-red-600": ai_suggestion.errors[:context_entity_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :suggestion_prompt %>
    <%= form.textarea :suggestion_prompt, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ai_suggestion.errors[:suggestion_prompt].none?, "border-red-400 focus:outline-red-600": ai_suggestion.errors[:suggestion_prompt].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :suggestion_content %>
    <%= form.text_field :suggestion_content, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ai_suggestion.errors[:suggestion_content].none?, "border-red-400 focus:outline-red-600": ai_suggestion.errors[:suggestion_content].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :suggestion_type %>
    <%= form.text_field :suggestion_type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ai_suggestion.errors[:suggestion_type].none?, "border-red-400 focus:outline-red-600": ai_suggestion.errors[:suggestion_type].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :confidence_score %>
    <%= form.text_field :confidence_score, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ai_suggestion.errors[:confidence_score].none?, "border-red-400 focus:outline-red-600": ai_suggestion.errors[:confidence_score].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.text_field :status, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ai_suggestion.errors[:status].none?, "border-red-400 focus:outline-red-600": ai_suggestion.errors[:status].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :feedback_rating %>
    <%= form.number_field :feedback_rating, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ai_suggestion.errors[:feedback_rating].none?, "border-red-400 focus:outline-red-600": ai_suggestion.errors[:feedback_rating].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :feedback_text %>
    <%= form.textarea :feedback_text, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": ai_suggestion.errors[:feedback_text].none?, "border-red-400 focus:outline-red-600": ai_suggestion.errors[:feedback_text].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
