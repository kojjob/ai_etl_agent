<nav class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-gray-200/20 transition-all duration-300" 
     data-controller="navbar" 
     data-navbar-scrolled-class="bg-white/98 shadow-lg">
  
  <div class="container mx-auto px-6">
    <div class="flex items-center justify-between h-16">
      
      <!-- Logo Section -->
      <div class="flex items-center space-x-4">
        <%= link_to root_path, class: "flex items-center space-x-3 group", title: "AI ETL Agent - Home" do %>
          <div class="w-8 h-8 bg-gradient-to-br from-blue-600 to-purple-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <span class="text-xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">
            AI ETL Agent
          </span>
        <% end %>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <%= link_to "Features", "#features", class: "text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
        <%= link_to "Technology", "#technology", class: "text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
        <%= link_to "Pipelines", pipelines_path, class: "text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
        <%= link_to "Demo", demo_path, class: "text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
        <%= link_to "Docs", docs_path, class: "text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
        
        <!-- User Actions -->
        <div class="flex items-center space-x-4 ml-8 pl-8 border-l border-gray-200">
          <% if defined?(user_signed_in?) && user_signed_in? %>
            <!-- User Menu -->
            <div class="relative" data-controller="dropdown">
              <button data-action="click->dropdown#toggle" 
                      class="flex items-center space-x-2 text-gray-700 hover:text-blue-600 transition-colors duration-200">
                <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-500 rounded-full flex items-center justify-center">
                  <span class="text-white text-sm font-medium">
                    <%= current_user.email.first.upcase %>
                  </span>
                </div>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
              
              <!-- Dropdown Menu -->
              <div data-dropdown-target="menu" 
                   class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible transition-all duration-200 transform translate-y-1">
                <div class="py-2">
                  <%= link_to "Dashboard", pipelines_path, class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200" %>
                  <%= link_to "Profile", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200" %>
                  <%= link_to "Settings", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200" %>
                  <div class="border-t border-gray-200 my-2"></div>
                  <%= button_to "Sign Out", destroy_user_session_path, method: :delete, 
                      class: "block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors duration-200" %>
                </div>
              </div>
            </div>
          <% else %>
            <!-- Auth Actions -->
            <%= link_to "Sign In", new_user_session_path, 
                class: "text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
            <%= link_to "Get Started", new_user_registration_path, 
                class: "px-4 py-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-medium rounded-lg hover:shadow-lg transition-all duration-300 transform hover:scale-105" %>
          <% end %>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button data-action="click->navbar#toggleMobile" 
                data-navbar-target="mobileButton"
                class="p-2 rounded-lg text-gray-700 hover:text-blue-600 hover:bg-gray-50 transition-all duration-200"
                aria-label="Toggle mobile menu"
                aria-expanded="false">
          <svg data-navbar-target="hamburger" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
          <svg data-navbar-target="close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div data-navbar-target="mobileMenu" 
         class="md:hidden overflow-hidden transition-all duration-300 ease-in-out max-h-0">
      <div class="py-4 space-y-3 border-t border-gray-200/50">
        <%= link_to "Features", "#features", 
            class: "block py-2 text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
        <%= link_to "Technology", "#technology", 
            class: "block py-2 text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
        <%= link_to "Pipelines", pipelines_path, 
            class: "block py-2 text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
        <%= link_to "Demo", demo_path, 
            class: "block py-2 text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
        <%= link_to "Docs", "#", 
            class: "block py-2 text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
        
        <div class="pt-4 border-t border-gray-200/50">
          <% if user_signed_in? %>
            <div class="space-y-3">
              <%= link_to "Dashboard", pipelines_path, 
                  class: "block py-2 text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
              <%= link_to "Profile", "#", 
                  class: "block py-2 text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
              <%= link_to "Settings", "#", 
                  class: "block py-2 text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
              <%= button_to "Sign Out", destroy_user_session_path, method: :delete, 
                  class: "block py-2 text-red-600 hover:text-red-700 transition-colors duration-200 font-medium" %>
            </div>
          <% else %>
            <div class="space-y-3">
              <%= link_to "Sign In", new_user_session_path, 
                  class: "block py-2 text-gray-700 hover:text-blue-600 transition-colors duration-200 font-medium" %>
              <%= link_to "Get Started", new_user_registration_path, 
                  class: "block py-3 px-4 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-medium rounded-lg text-center" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Spacer for fixed navbar -->
<div class="h-16"></div>
