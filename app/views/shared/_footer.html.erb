          <li><%= link_to "Careers", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Contact", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Privacy", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Terms", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Security", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
        </ul>
      </div>
    </div>

    <!-- Newsletter Signup -->
    <div class="mt-16 pt-8 border-t border-gray-800">
      <div class="max-w-md">
        <h4 class="text-lg font-semibold mb-4">Stay Updated</h4>
        <p class="text-gray-400 mb-6">Get the latest updates on new features and best practices.</p>
        
        <%= form_with url: "#", method: :post, data: { controller: "newsletter", action: "submit->newsletter#submit" }, 
            class: "flex space-x-3", local: true do |form| %>
          <%= form.email_field :email, 
              data: { newsletter_target: "email" },
              placeholder: "Enter your email", 
              class: "flex-1 px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200" %>
          <%= form.submit "Subscribe", 
              data: { newsletter_target: "submit" },
              class: "px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white font-medium rounded-lg hover:shadow-lg transition-all duration-300 transform hover:scale-105 cursor-pointer" %>
        <% end %>
      </div>
    </div>
