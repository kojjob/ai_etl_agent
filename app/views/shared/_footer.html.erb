        <h4 class="text-lg font-semibold mb-6">Resources</h4>
        <ul class="space-y-3">
          <li><%= link_to "Documentation", "docs", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Tutorials", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "API Reference", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Community", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Blog", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Status", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="text-lg font-semibold mb-6">Company</h4>
        <ul class="space-y-3">
