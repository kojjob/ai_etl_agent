          <!-- System Status -->
          <div class="flex items-center space-x-2">
            <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
            <span class="text-gray-400">All systems operational</span>
          </div>

          <!-- Version -->
          <div class="text-gray-500">
            v1.0.0
          </div>

          <!-- Legal Links -->
          <div class="flex space-x-4">
            <%= link_to "Privacy Policy", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %>
            <%= link_to "Terms of Service", "#", class: "text-gray-400 hover:text-white transition-colors duration-200" %>
          </div>
        </div>
      </div>
