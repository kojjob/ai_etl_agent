        <h4 class="text-lg font-semibold mb-6">Product</h4>
        <ul class="space-y-3">
          <li><%= link_to "Features", "#features", class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Pipelines", pipelines_path, class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
          <li><%= link_to "Connections", connections_path, class: "text-gray-400 hover:text-white transition-colors duration-200" %></li>
