<%= form_with(model: dashboard_widget, class: "contents") do |form| %>
  <% if dashboard_widget.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(dashboard_widget.errors.count, "error") %> prohibited this dashboard_widget from being saved:</h2>

      <ul class="list-disc ml-6">
        <% dashboard_widget.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :dashboard_id %>
    <%= form.text_field :dashboard_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dashboard_widget.errors[:dashboard_id].none?, "border-red-400 focus:outline-red-600": dashboard_widget.errors[:dashboard_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :widget_type %>
    <%= form.text_field :widget_type, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dashboard_widget.errors[:widget_type].none?, "border-red-400 focus:outline-red-600": dashboard_widget.errors[:widget_type].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dashboard_widget.errors[:title].none?, "border-red-400 focus:outline-red-600": dashboard_widget.errors[:title].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :configuration %>
    <%= form.text_field :configuration, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dashboard_widget.errors[:configuration].none?, "border-red-400 focus:outline-red-600": dashboard_widget.errors[:configuration].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :refresh_interval_seconds %>
    <%= form.number_field :refresh_interval_seconds, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": dashboard_widget.errors[:refresh_interval_seconds].none?, "border-red-400 focus:outline-red-600": dashboard_widget.errors[:refresh_interval_seconds].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
